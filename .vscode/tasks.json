{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: g++ build active file",  /* 与launch.json文件里的preLaunchTask的内容保持一致 */
            "command": "/usr/bin/g++",
            "args": [
                "-std=c++11",
                "-g",
                //"${file}",   /* 编译单个文件 */
                "${fileDirname}/*.cpp",  /* 编译多个文件 */
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}",  /* 输出文件路径 */
                // "${fileDirname}/${fileBasenameNoExtension}.exe",  /* 输出文件路径 */

                /* 项目所需的头文件路径 */
                "-I","${workspaceFolder}/",
                "-I","/usr/local/include/",
                "-I","/usr/local/include/opencv4/",
                "-I","/usr/local/include/opencv4/opencv2",
                
                // torch所需头文件路径
                "-I","/usr/local/libtorch",
                "-I","/usr/local/libtorch/include",
                // "-I","/usr/local/libtorch/include/torch/csrc/api/include",
                "-L","/usr/local/libtorch/lib",
                "/usr/local/libtorch/lib/lib*",

                /* OpenCV的lib库 */
                "-L", "/usr/local/lib",
                "/usr/local/lib/libopencv_*",

                /* 项目所需的库文件路径 */
                "-L", "/usr/local/lib",
                "-I", "${workspaceFolder}/include/",
                
                /* X11的lib库 */
                "-L","/usr/lib/x86_64-linux-gnu",
                "/usr/lib/x86_64-linux-gnu/libX11.so",
                "/usr/lib/x86_64-linux-gnu/libpthread.so",

                // Mvs工业相机自定义驱动库文件路径
                "-I","${workspaceFolder}/src/sv_mvsCamera/include/",
                "-g","${workspaceFolder}/src/sv_mvsCamera/src/*.cpp",// -g 编译这个文件下的所有的cpp文件，如果文件是undefine referencce to 就需要使用-g来编译所有的cpp

                /* 海康Vision的lib库 */
                "-L","${workspaceFolder}/src/sv_mvsCamera/lib/64",
                "${workspaceFolder}/src/sv_mvsCamera/lib/64/*",
                
                // USB相机自定义驱动库文件路径
                "-I","${workspaceFolder}/src/sv_usbCamera/include/",
                "-g","${workspaceFolder}/src/sv_usbCamera/src/*.cpp",
                
                // 图像处理程序库文件路径
                "-I","${workspaceFolder}/src/sv_imageProcess/include/",
                "-g","${workspaceFolder}/src/sv_imageProcess/src/*.cpp",
                

                "-lopencv_core",
                "-lopencv_highgui",
                "-lopencv_imgproc",
                "-lopencv_videoio",
        
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task generated by Debugger."
        }
    ],
    "version": "2.0.0"
}
