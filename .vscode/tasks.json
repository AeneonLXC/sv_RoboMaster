{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: g++ build active file",  /* 与launch.json文件里的preLaunchTask的内容保持一致 */
            "command": "/usr/bin/g++",
            "args": [
                "-std=c++11",
                "-g",
                //"${file}",   /* 编译单个文件 */
                "${fileDirname}/main.cpp",  /* 编译多个文件 */
                //"${fileDirname}/*.cpp",  /* 编译多个文件 */
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}",  /* 输出文件路径 */
                // "${fileDirname}/${fileBasenameNoExtension}.exe",  /* 输出文件路径 */

                /* 项目所需的头文件路径 */
                "-I","${workspaceFolder}/",
                "-I","/usr/local/include/",
                "-I","/usr/local/include/opencv4/",
                "-I","/usr/local/include/opencv4/opencv2",

                /* OpenCV的lib库 */
                "-L", "/usr/local/lib",
                //"/usr/local/lib/libopencv_*",
                "/usr/local/lib/libopencv_highgui.so",
                "/usr/local/lib/libopencv_imgcodecs.so",
                "/usr/local/lib/libopencv_ml.so",
                "/usr/local/lib/libopencv_core.so",
                "/usr/local/lib/libopencv_video.so",       

                /* 项目所需的库文件路径 */
                "-L", "/usr/local/lib",
                "-I", "${workspaceFolder}/include/",
                
                /* X11的lib库 */
                "-L","/usr/lib/x86_64-linux-gnu",
                "/usr/lib/x86_64-linux-gnu/libX11.so",
                "/usr/lib/x86_64-linux-gnu/libpthread.so",

                // Mvs工业相机自定义驱动库文件路径
                "-I","${workspaceFolder}/src/sv_mvsCamera/include/",
                "-g","${workspaceFolder}/src/sv_mvsCamera/src/Mvs_Drive.cpp",// -g 编译这个文件下的所有的cpp文件，如果文件是undefine referencce to 就需要使用-g来编译所有的cpp

                /* 海康Vision的lib库 */
                //"${workspaceFolder}/src/sv_mvsCamera/lib/64/*",
                "-L","${workspaceFolder}/src/sv_mvsCamera/lib/64",
                "${workspaceFolder}/src/sv_mvsCamera/lib/64/libFormatConversion.so",
                "${workspaceFolder}/src/sv_mvsCamera/lib/64/libLog_gcc421_v3_0.so",
                "${workspaceFolder}/src/sv_mvsCamera/lib/64/libMvCameraControl.so.3.1.3.0",
                "${workspaceFolder}/src/sv_mvsCamera/lib/64/libMvUsb3vTL.so",
                "${workspaceFolder}/src/sv_mvsCamera/lib/64/libGCBase_gcc421_v3_0.so",
                "${workspaceFolder}/src/sv_mvsCamera/lib/64/libMathParser_gcc421_v3_0.so",
                "${workspaceFolder}/src/sv_mvsCamera/lib/64/libMVGigEVisionSDK.so",
                "${workspaceFolder}/src/sv_mvsCamera/lib/64/libMvUsb3vTL.so.3.1.3.0",
                "${workspaceFolder}/src/sv_mvsCamera/lib/64/libGenApi_gcc421_v3_0.so",
                "${workspaceFolder}/src/sv_mvsCamera/lib/64/libMediaProcess.so",
                "${workspaceFolder}/src/sv_mvsCamera/lib/64/libMVGigEVisionSDK.so.3.1.3.0",
                "${workspaceFolder}/src/sv_mvsCamera/lib/64/libNodeMapData_gcc421_v3_0.so",
                "${workspaceFolder}/src/sv_mvsCamera/lib/64/liblog4cpp_gcc421_v3_0.so",
                "${workspaceFolder}/src/sv_mvsCamera/lib/64/libMvCameraControl.so",
                "${workspaceFolder}/src/sv_mvsCamera/lib/64/libMVRender.so",
                "${workspaceFolder}/src/sv_mvsCamera/lib/64/libXmlParser_gcc421_v3_0.so",
                
                // USB相机自定义驱动库文件路径
                "-I","${workspaceFolder}/src/sv_usbCamera/include/",
                "-g","${workspaceFolder}/src/sv_usbCamera/src/UsbCamera_Drive.cpp",
                
                // 图像处理程序库文件路径
                "-I","${workspaceFolder}/src/sv_imageProcess/include/",
                "-g","${workspaceFolder}/src/sv_imageProcess/src/Image_Process.cpp",
               
                //串口通信程序库文件路径
                "-I", "/tmp/usr/local/include/serial/",
                "-I","${workspaceFolder}/src/sv_serious/include/",
                "-g","${workspaceFolder}/src/sv_serious/src/Serial_UL.cpp",
                "-L", "/tmp/usr/local/lib",
                "/tmp/usr/local/lib/libserial.so",

                "-lopencv_core",
                "-lopencv_highgui",
                "-lopencv_imgproc",
                "-lopencv_videoio",
                "-lopencv_ml",
                "-lopencv_imgcodecs",
        
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task generated by Debugger."
        }
    ],
    "version": "2.0.0"
}
